generator client {
  provider   = "prisma-client-js" // <- switch back to the classic generator
  output     = "../generated/prisma/client"
   engineType = "binary"        // optional; default here is already binary
}

datasource db {
  provider = "postgresql"
}
model Project {
  id        String   @id @default(uuid())
  name      String
  apiKey    String   @unique
  createdAt DateTime @default(now())

  webhooks  Webhook[]
  events    Event[]
}

model Webhook {
  id         String   @id @default(uuid())
  projectId String
  url        String
  secret     String
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())

  project    Project  @relation(fields: [projectId], references: [id],onDelete: Cascade)
  deliveries Delivery[]

  @@index([projectId])
}

model Event {
  id          String   @id @default(uuid())
  projectId  String
  type        String
  payload     Json
  idempotencyKey String //there cannot be a single event with the same idempotency key
  //for a project id also this is neccesary that is why removed ?
  createdAt   DateTime @default(now())

  project     Project @relation(fields: [projectId], references: [id])
  deliveries  Delivery[]

  @@unique([projectId, idempotencyKey])
  @@index([projectId, createdAt])
}

model Delivery {
  id         String   @id @default(uuid())
  eventId   String
  webhookId String
  status     DeliveryStatus
  attempt    Int      @default(1)
  responseCode Int?
  error      String?
  createdAt  DateTime @default(now())

  event      Event    @relation(fields: [eventId], references: [id])
  webhook    Webhook  @relation(fields: [webhookId], references: [id])
  attempts   DeliveryAttempt[]
  @@index([eventId])
  @@index([webhookId, status])
  @@unique([eventId, webhookId])
}

model DeliveryAttempt {
  id           String   @id @default(uuid())
  deliveryId   String
  attempt      Int
  status       DeliveryStatus
  s3ObjectKey  String
  latencyMs    Int
  createdAt    DateTime @default(now())

  delivery     Delivery @relation(fields: [deliveryId], references: [id], onDelete: Cascade)

  @@unique([deliveryId, attempt])
  @@index([deliveryId])
}


enum DeliveryStatus {
  PENDING
  SUCCESS
  FAILED
  RETRYING
  DEAD
}
